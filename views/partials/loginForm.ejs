<div id="modal" class="popupContainer" style="display:none;">
  <header class="popupHeader">
    <span class="header_title">Login</span>
    <span class="modal_close"> <i class="fa fa-times"></i>
    </span>
  </header>

  <section class="popupBody">

    <!-- Username & Password Login form -->
    <div class="user_login">
      <form>
        <label>Username</label>
        <input type="text" id="popup-username" />
        <br />

        <label>Password</label>
        <input type="password" id="popup-password" />
        <br />

        <div class="action_btns">
          <div class="one_half">
            <a href="#" class="btn back_btn model_close"><i class="fa fa-angle-double-left"></i>
              Back
            </a>
          </div>
          <div class="one_half last">
            <a href="#" class="btn login-btn">Login</a>
